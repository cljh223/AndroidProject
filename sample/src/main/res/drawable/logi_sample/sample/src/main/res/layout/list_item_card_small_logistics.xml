<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        android:layout_marginBottom="@dimen/cardMarginVertical"
        android:layout_marginLeft="@dimen/cardMarginHorizontal"
        android:layout_marginRight="@dimen/cardMarginHorizontal"
        android:layout_marginTop="@dimen/cardMarginVertical"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="0dp">

        <RelativeLayout
            android:id="@+id/logi_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/logi_image"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_above="@+id/logi_msg"
                android:layout_marginBottom="14dp"
                android:layout_toLeftOf="@+id/logi_usage"
                android:layout_toStartOf="@+id/logi_usage"
                android:src="@drawable/wh1" />

            <!--<TextView
                android:id="@+id/warehouse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:layout_toEndOf="@+id/imageView"
                android:layout_toRightOf="@+id/imageView"
                android:text="제 1물류창고"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/warehouse"
                android:layout_alignStart="@+id/warehouse"
                android:layout_below="@+id/warehouse"
                android:text="경기도 하남시 감일남로 36-15"
                android:textColor="@android:color/darker_gray"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TEL:031-523-2893"
                android:textColor="@android:color/darker_gray"
                android:textSize="15sp" />-->

            <TextView
                android:id="@+id/logi_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/logi_usage"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="38dp"
                android:layout_marginRight="38dp"
                android:text="제 1물류창고"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/logi_usage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/logi_image"
                android:layout_alignLeft="@+id/logi_title"
                android:layout_alignStart="@+id/logi_title"
                android:text="전체이용률: 86%"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/logi_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="11dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:text="Total warehouse status : NORMAL\n모든 재고 정보는 어제를 기준으로 합니다"
                android:textColor="@color/green_teal"
                android:textSize="16sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</FrameLayout>