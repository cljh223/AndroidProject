<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginBottom="@dimen/cardMarginVertical"
        android:layout_marginLeft="@dimen/cardMarginHorizontal"
        android:layout_marginRight="@dimen/cardMarginHorizontal"
        android:layout_marginTop="@dimen/cardMarginVertical"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="0dp">

        <LinearLayout
            android:id="@+id/logisticsFirstBigLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioGroup
                    android:id="@+id/logi_radioGroup1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/logi_button11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="A구역" />

                    <RadioButton
                        android:id="@+id/logi_button12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="B구역" />

                    <RadioButton
                        android:id="@+id/logi_button13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="C구역"/>

                    <RadioButton
                        android:id="@+id/logi_button14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="D구역"/>

                    <RadioButton
                        android:id="@+id/logi_button15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="E구역"/>
                </RadioGroup>
            </LinearLayout>
            <ImageView
                android:id="@+id/radioImg"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/logi_11"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ramenImg"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ansung_ramen"/>
                <LinearLayout
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/test"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:paddingBottom="10dp"
                        android:textSize="18dp"
                        android:text="Product Information"/>
                    <TableLayout
                        android:id="@+id/logi1_table"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TableRow android:background="@color/cardview_shadow_start_color">
                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textSize="17dp"
                                android:text="Factor"/>
                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textSize="17dp"
                                android:text="Detail"/>
                        </TableRow>
                        <TableRow>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textSize="16dp"
                                android:text="상품이름"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textSize="16dp"
                                android:text="안성탕면"/>
                        </TableRow>
                        <TableRow>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textSize="16dp"
                                android:text="적재구역"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textSize="16dp"
                                android:text="A구역 / 30㎢"/>
                        </TableRow>
                        <TableRow>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textSize="16dp"
                                android:text=" 창고이용률  "/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textSize="16dp"
                                android:text="70%"/>
                        </TableRow>
                        <TableRow>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textSize="16dp"
                                android:text="재고 수량"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textSize="16dp"
                                android:text="338개"/>
                        </TableRow>
                    </TableLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/logisticsSecondBigLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/purchaseSecondBigDetail1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="구매 3" />

            <TextView
                android:id="@+id/purchaseSecondBigDetail2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="구매 3" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/logisticsThirdBigLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ThirdigDetail1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="구매 4" />

            <TextView
                android:id="@+id/ThirdBigDetail2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="구매 5" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>